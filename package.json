{
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.7.4",
    "shx": "^0.4.0"
  },
  "scripts": {
    "build": "dx build --release --ssg",
    "clean": "npm run clean1 && npm run clean2 && npm run clean3",
    "clean1": "shx rm -rf target/dx/dioxus-prototype/release",
    "clean2": "shx rm -rf target/server-release",
    "clean3": "shx rm -rf dist",
    "copy": "shx cp -r target/dx/dioxus-prototype/release/web/public dist/",
    "dist": "npm run clean && npm run build && npm run copy && npm run merge",
    "format": "prettier dist --ignore-path .prettierignore --write",
    "merge": "shx cp -r merge/* dist/",
    "serve": "http-server dist -c-1 -o",
    "start": "dx serve --open",
    "test": "npm run dist && npm run serve"
  }
}
